<%= render "shared/errors", obj: @ingredient %>


<div class="row">
  <div class="col-md-12">
    <%= form_for(@ingredient, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="row form-group" >
        <%= f.label :name, :class => 'control-label col-md-2' %>
        <div class="col-md-8" >
          <%= f.text_field :name, class: "form-control", placeholder: "Enter ingredient", autofocus: true %>
        </div>
      </div>


      <div class="row form-group">
        <div class="col-md-4">
          <%= f.submit(@ingredient.new_record? ? "Add Ingredient" : "Update Ingredient", class: "btn btn-primary btn-lg btn-xlarge float-right" )%>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 offset-md-4 colormatch">
      [<%= link_to "Cancel request and return to recipes listing", recipes_path %>]
    </div>
  </div>
</div>
